<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_gym_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shiwantha.testone.GymProfileActivity"
    tools:showIn="@layout/activity_gym_profile">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ImageView
            app:srcCompat="@drawable/cover"
            android:id="@+id/imageView2"
            android:scaleType="fitCenter"
            android:layout_height="150dp"
            android:layout_width="match_parent" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="2">


            <Button
                android:text="Contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@android:color/holo_blue_light"
                android:textColor="@android:color/black"
                android:layout_marginRight="10dp"

                android:textSize="20sp"
                />

            <Button
                android:text="Directions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@android:color/holo_blue_light"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"/>

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_weight="1"
                android:layout_marginTop="20dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <TextView
            android:text="Address:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adrs"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/gym_profile_font_size"
                android:layout_weight="2"/>
            <TextView
                android:text="Elm Street, St Phoenix, AZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/gym_profile_font_size"
                android:layout_weight="1"/>
        </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">
                    <TextView
                        android:text="Phone:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/phn"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/gym_profile_font_size"
                        android:layout_weight="2"/>
                    <TextView
                        android:text="480-551-4856"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/phone"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/gym_profile_font_size"
                        android:layout_weight="1"/>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">
                <TextView
                    android:text="Price:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/priz"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/gym_profile_font_size"
                    android:layout_weight="2"/>
                    <TextView
                        android:text="$$"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/price"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/gym_profile_font_size"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                <TextView
                    android:text="Hours:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/time"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/gym_profile_font_size"
                    android:weightSum="2"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="M-F:8am-8pm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rate"
                            android:layout_marginTop="5dp"
                            android:textSize="@dimen/gym_profile_font_size"
                            android:weightSum="1"/>

                        <TextView
                            android:text="Sun: Closed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/close"
                            android:layout_marginTop="5dp"
                            android:textSize="@dimen/gym_profile_font_size"
                            android:layout_weight="1"
                            android:layout_gravity="right"/>

                        <TextView
                            android:text="Sat:10am-6pm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rate2"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1.28"
                            android:layout_marginLeft="70dp"
                            android:textSize="@dimen/gym_profile_font_size" />
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <TextView
                        android:text="Type:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/type"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:textSize="@dimen/gym_profile_font_size" />
                    <TextView
                        android:text="Traditinal,Yoga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/types"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/gym_profile_font_size" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3">

                    <TextView
                        android:text="Web Site:"
                        android:layout_width="232dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/website"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/gym_profile_font_size"
                        android:layout_weight="2" />
                    <TextView
                        android:text="www.lafitness.com"
                        android:layout_width="232dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/websiteValue"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/gym_profile_font_size"
                        android:layout_weight="2" />

                </LinearLayout>


            </LinearLayout>
</android.support.v7.widget.CardView>

        </ScrollView>


    </LinearLayout>

</RelativeLayout>
